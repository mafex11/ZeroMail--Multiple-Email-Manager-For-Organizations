{
  "manifest_version": 3,
  "name": "Fusion Mail",
  "version": "1.0.0",
  "description": "A streamlined Gmail experience with seamless account integration",
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/bg.png",
      "assets/email-envelope-close--Streamline-Pixel.svg"
    ],
    "matches": ["https://mail.google.com/*"]
  }],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "oauth2": {
    "client_id": "5870068255-c7vvtfeb7ol54qcto4fpr5nl45b4sp72.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.labels"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 